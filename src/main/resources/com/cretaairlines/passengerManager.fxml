<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="730.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PassengerManagerController">

    <!-- Título -->
    <Label layoutX="259.0" layoutY="14.0" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Gestion de pasajeros" />

    <!-- Tabla de Aeropuertos -->
    <TableView fx:id="passengerTableView" layoutX="114.0" layoutY="63.0" prefHeight="200" prefWidth="503.0">
        <columns>
            <TableColumn fx:id="codeColumn" prefWidth="56.0" text="Código" />
            <TableColumn fx:id="nameCol" prefWidth="176.0" text="Nombre" />
            <TableColumn fx:id="nationalidadCol" prefWidth="92.0" text="Nacionalidad" />
            <TableColumn fx:id="vuelosCol" prefWidth="147.0" text="Vuelos Realizados" />
        </columns>
    </TableView>

    <!-- Botón -->
    <Button layoutX="80.0" layoutY="269.0" onAction="#createPassengerOnAction" prefHeight="42.0" prefWidth="150" style="-fx-font-weight: bold;" text="Registrar Pasajero" />
   <Button layoutX="284.0" layoutY="269.0" onAction="#removePassengerOnAction" prefHeight="42.0" prefWidth="163.0" style="-fx-font-weight: bold;" text="Eliminar Pasajero" />
   <Button layoutX="527.0" layoutY="269.0" onAction="#statsOnAction" prefHeight="42.0" prefWidth="163.0" style="-fx-font-weight: bold;" text="Estadisticas" />

</AnchorPane>
