<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="730.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FlightManagerController">

    <!-- Título -->
    <Label layoutX="272.0" layoutY="14.0" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Gestión de Vuelos" />

    <!-- Tabla de Aeropuertos -->
    <TableView fx:id="flightTableView" layoutX="20" layoutY="60" prefHeight="200" prefWidth="698.0">
        <columns>
            <TableColumn fx:id="codeColumn" prefWidth="56.0" text="Código" />
            <TableColumn fx:id="departureTimeCol" prefWidth="176.0" text="Hora de salida" />
            <TableColumn fx:id="originCol" prefWidth="92.0" text="Origen" />
            <TableColumn fx:id="destinyCol" prefWidth="91.0" text="Destino" />
         <TableColumn fx:id="passengersCol" prefWidth="140.0" text="Cantidad de pasageros" />
         <TableColumn fx:id="capacityCol" prefWidth="122.0" text="Capacidad maxima" />
        </columns>
    </TableView>

    <!-- Botón -->
    <Button layoutX="48.0" layoutY="263.0" onAction="#createFlightOnAction" prefHeight="42.0" prefWidth="150" style="-fx-font-weight: bold;" text="Programar Vuelo" />
   <Button layoutX="284.0" layoutY="263.0" onAction="#removeFlightOnAction" prefHeight="42.0" prefWidth="163.0" style="-fx-font-weight: bold;" text="Eliminar Vuelo" />
   <Button layoutX="524.0" layoutY="263.0" onAction="#addPassengers" prefHeight="42.0" prefWidth="163.0" style="-fx-font-weight: bold;" text="Añadir pasajeros" />
   <Button layoutX="48.0" layoutY="313.0" onAction="#detailsOnAction" prefHeight="42.0" prefWidth="163.0" style="-fx-font-weight: bold;" text="Detalles" />

</AnchorPane>
